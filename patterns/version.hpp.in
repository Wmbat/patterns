#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define PATTERNS_VERSION       $patterns.version.project_number$ULL
#define PATTERNS_VERSION_STR   "$patterns.version.project$"
#define PATTERNS_VERSION_ID    "$patterns.version.project_id$"
#define PATTERNS_VERSION_FULL  "$patterns.version$"

#define PATTERNS_VERSION_MAJOR $patterns.version.major$
#define PATTERNS_VERSION_MINOR $patterns.version.minor$
#define PATTERNS_VERSION_PATCH $patterns.version.patch$

#define PATTERNS_PRE_RELEASE   $patterns.version.pre_release$

#define PATTERNS_SNAPSHOT_SN   $patterns.version.snapshot_sn$ULL
#define PATTERNS_SNAPSHOT_ID   "$patterns.version.snapshot_id$"
